#include <stdio.h>

int main() {
    float amount;

    printf("Enter purchase amount: ₹");
    scanf("%f", &amount);

    if (amount > 1000) {
        printf("You get 10%% discount! \n");
        printf("Discount: ₹%.2f\n", amount * 0.1);
        printf("Payable: ₹%.2f\n", amount * 0.9);
    } else
        printf("Payable: ₹%.2f\n", amount);

    return 0;
}
