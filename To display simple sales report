#include <stdio.h>
int main() {
    float sales[7], total=0;
    for(int i=0; i<7; i++) {
        printf("Enter sales for day %d: ", i+1);
        scanf("%f", &sales[i]);
        total += sales[i];
    }
    printf("Total sales: ₹%.2f\n", total);
    printf("Sales report:\n");
    for(int i=0; i<7; i++)
        printf("Day %d: ₹%.2f\n", i+1, sales[i]);
    return 0;
}
