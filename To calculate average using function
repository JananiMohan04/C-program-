#include <stdio.h>
float calculateAvg(int arr[], int n) {
    float sum = 0;
    for(int i = 0; i < n; i++) sum += arr[i];
    return sum / n;
}
int main() {
    int n;
    printf("Enter size: ");
    scanf("%d", &n);
    int arr[n];
    printf("Enter %d numbers: ", n);
    for(int i = 0; i < n; i++) scanf("%d", &arr[i]);
    printf("Average: %.2f\n", calculateAvg(arr, n));
    return 0;
}
