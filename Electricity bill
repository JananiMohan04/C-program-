#include <stdio.h>

int main() {
    float units, bill = 0;

    printf("Enter units consumed: ");
    scanf("%f", &units);

    if (units <= 100) {
        bill = units * 1.50;
    } else if (units <= 300) {
        bill = 100 * 1.50 + (units - 100) * 2.50;
    } else {
        bill = 100 * 1.50 + 200 * 2.50 + (units - 300) * 3.50;
    }

    printf("Electricity bill: â‚¹%.2f\n", bill);
    return 0;
}
