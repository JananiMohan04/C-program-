#include <stdio.h>
#include <string.h>
void reverse(char str[]) {
    int len = strlen(str);
    for(int i = 0, j = len - 1; i < j; i++, j--) {
        char temp = str[i];
        str[i] = str[j];
        str[j] = temp;
    }
}
int main() {
    char str[100];
    printf("Enter string: ");
    fgets(str, sizeof(str), stdin);
    str[strcspn(str, "\n")] = 0; // remove newline
    reverse(str);
    printf("Reversed: %s\n", str);
    return 0;
}
